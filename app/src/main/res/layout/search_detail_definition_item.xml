<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextView.Black.14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_detail_definition_label" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/definitionText"
        style="@style/TextView.Regular.14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/wordText"

        tools:text="A trivial lie." />

</LinearLayout>